<local:RTScreen x:Class="RTLibrary.RTTechScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:RTLibrary"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    Background="Chartreuse"
    MouseEnter="Display_MouseEnter">
    <local:RTScreen.RowDefinitions>
        <RowDefinition/>
        <RowDefinition Height="Auto"/>
    </local:RTScreen.RowDefinitions>
    <StatusBar Grid.Row="1" Height="32" VerticalAlignment="Center">
        <StatusBar.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="2"/>
            </Style>
        </StatusBar.Resources>
        <Border BorderBrush="Red" BorderThickness="1">
            <TextBlock Name="Status">OK</TextBlock>
        </Border>
        <TextBlock Name="Mess"/>
    </StatusBar>
</local:RTScreen>
