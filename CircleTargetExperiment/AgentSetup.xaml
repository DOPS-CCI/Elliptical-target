<Window x:Class="CircleTargetExperiment.AgentSetup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CircleTargetExperiment"
        mc:Ignorable="d" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStyle="ThreeDBorderWindow"
        Title="Session setup" WindowStartupLocation="CenterScreen" FontSize="20" FontWeight="Bold" Closing="Window_Closing">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Width" Value="80"/>
        </Style>
        <Style TargetType="StackPanel">
            <Setter Property="Margin" Value="4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Orientation" Value="Horizontal"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Width" Value="100"/>
            <EventSetter Event="Click" Handler="Button_Click"/>
        </Style>
    </Window.Resources>
    <StackPanel Orientation="Vertical" Margin="12" HorizontalAlignment="Center">
        <TextBlock FontSize="32" Foreground="#FF4DEC16" Text="Target in Circle Protocol" HorizontalAlignment="Center"/>
        <StackPanel>
            <TextBlock>Delay before start of baseline acquisition:</TextBlock>
            <TextBox Name="BaselineDelay" Initialized="TextBox_Initialized" TextChanged="TextBox_TextChanged"/>
            <TextBlock>seconds</TextBlock>
        </StackPanel>
        <StackPanel>
            <TextBlock>Length of baseline acquisition:</TextBlock>
            <TextBox Name="BaselineLength" Initialized="TextBox_Initialized" TextChanged="TextBox_TextChanged"/>
            <TextBlock>seconds</TextBlock>
        </StackPanel>
        <StackPanel>
            <TextBlock>Delay before target selection: between</TextBlock>
            <TextBox Name="TargetSelectMinDelay" Initialized="TextBox_Initialized" TextChanged="TextBox_TextChanged"/>
            <TextBlock>and</TextBlock>
            <TextBox Name="TargetSelectMaxDelay" Initialized="TextBox_Initialized" TextChanged="TextBox_TextChanged"/>
            <TextBlock>seconds</TextBlock>
        </StackPanel>
        <StackPanel>
            <TextBlock>Permit delay:</TextBlock>
            <TextBox Name="MinPermitDelay" Initialized="TextBox_Initialized" TextChanged="TextBox_TextChanged"/>
            <TextBlock>seconds</TextBlock>
        </StackPanel>
        <StackPanel>
            <TextBlock>Feedback delay:</TextBlock>
            <TextBox Name="FeedbackDelay" Initialized="TextBox_Initialized" TextChanged="TextBox_TextChanged"/>
            <TextBlock>seconds</TextBlock>
        </StackPanel>
        <StackPanel>
            <TextBlock>Feedback length:</TextBlock>
            <TextBox Name="FeedbackLength" Initialized="TextBox_Initialized" TextChanged="TextBox_TextChanged"/>
            <TextBlock>seconds</TextBlock>
        </StackPanel>
        <StackPanel>
            <TextBlock>Number of trials within each run:</TextBlock>
            <TextBox Name="NumberOfTrialsInRun" TextChanged="NumberOfTrials_TextChanged" Initialized="NumberOfTrials_Initialized"/>
        </StackPanel>
        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="6">
            <StackPanel Orientation="Vertical">
                <CheckBox Name="AgentPresent" HorizontalAlignment="Center" VerticalContentAlignment="Center" IsChecked="True" Checked="AgentPresent_Check" Unchecked="AgentPresent_Check">Agent actively involved in experiment session</CheckBox>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Probability of agent seeing target in each trial"/>
                    <TextBox x:Name="Prob" IsEnabled="{Binding IsChecked, ElementName=AgentPresent}" Initialized="Prob_Initialized" TextChanged="TextBox_TextChanged"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button IsCancel="True">Exit</Button>
            <Button Name="OK" IsDefault="True">OK</Button>
        </StackPanel>
    </StackPanel>
</Window>
