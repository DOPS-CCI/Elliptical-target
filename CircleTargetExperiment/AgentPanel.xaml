<Canvas x:Class="CircleTargetExperiment.AgentPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:CircleTargetExperiment"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        Background="Black"
        Visibility="Collapsed">
    
    <Ellipse x:Name="Circle" Fill="#FF88B3DA" Panel.ZIndex="0"/>

    <Canvas x:Name="Target" Panel.ZIndex="1">
        <Ellipse Fill="Red" Height="10" Width="10" Canvas.Left="-5" Canvas.Top="-5"/>
        <Ellipse Stroke="Red" Height="30" Width="30" Canvas.Left="-15" Canvas.Top="-15" StrokeThickness="5"/>
        <Ellipse Fill="White" Height="40" Width="40" Canvas.Left="-20" Canvas.Top="-20" Panel.ZIndex="-1"/>
    </Canvas>

    <Canvas x:Name="Response" Panel.ZIndex="2" Visibility="Collapsed">
        <Ellipse Fill="Black" Height="12" Width="12" Canvas.Left="-6" Canvas.Top="-6"/>
    </Canvas>
</Canvas>
