<Canvas x:Class="CircleTargetExperiment.SubjectPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:CircleTargetExperiment"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        MouseMove="Display_MouseMove"
        Background="Black"
        Visibility="Collapsed">
    <Ellipse x:Name="Circle" Fill="#FF88B3DA" Panel.ZIndex="0"/>
    
    <Canvas Name="CrossHair" Panel.ZIndex="10"><!--Cursor-->
        <Line X1="-15" Y1="0" X2="15" Y2="0" Stroke="Red" StrokeThickness="3"/>
        <Line Y1="-15" X1="0" Y2="15" X2="0" Stroke="Red" StrokeThickness="3"/>
    </Canvas>
    
    <Canvas x:Name="Target" Visibility="Collapsed" Panel.ZIndex="1"><!--Target-->
        <Ellipse Fill="Red" Height="10" Width="10" Canvas.Left="-5" Canvas.Top="-5"/>
        <Ellipse Stroke="Red" Height="30" Width="30" Canvas.Left="-15" Canvas.Top="-15" StrokeThickness="5"/>
        <Ellipse Fill="White" Height="40" Width="40" Canvas.Left="-20" Canvas.Top="-20" Panel.ZIndex="-1"/>
    </Canvas>

    <Canvas x:Name="Response"  Panel.ZIndex="2" Visibility="Collapsed" ><!--Response location-->
        <Ellipse Fill="Black" Height="12" Width="12" Canvas.Left="-6" Canvas.Top="-6"/>
    </Canvas>
    
    <TextBlock x:Name="Trial" Canvas.Left="30" Canvas.Top="30" Foreground="Wheat" FontSize="24" FontWeight="Bold" Visibility="Collapsed">
        <Run>End Trial </Run>
        <Run Name="NTrial"/>
    </TextBlock>
    <Rectangle x:Name="ANAMark" Fill="White" Height="20" Width="20" Canvas.Left="0" Canvas.Top="0" Visibility="Collapsed"/><!--External event marker-->
</Canvas>
